<Pop_Advertencia>:
    size_hint: .8,.35
    title: 'ADVERTENCIA'
    BoxLayout: 
        canvas:
            Color:
                rgba: [200/255,210/255,223/255, 1] 
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'
        Label:
            text: 'PORFAVOR, INGRESE UNA CANTIDAD MENOR O IGUAL AL STOCK DISPONIBLE'
            color: 0,0,0,1
        Button:
            text: 'ACEPTAR'
            on_release: root.dismiss()


<CatalogoScreen>:
