<MenuScreen>:
    BoxLayout:
        canvas:            
            Color: 
                rgba: [200/255,210/255,223/255, 1] 
            Rectangle:
                size: self.size
        orientation: 'vertical'
        Label:
            color: 0,0,0,0.8
            text: 'BIENVENIDO!!'
            font_size: 45

        Button:
            text: 'BOLETA'
            size_hint: (.25, .2)
            pos_hint: {'x':.374, 'y':.2}
            background_color: 65/255, 105/255, 1,0.9
            on_release: root.manager.current = 'boleta'
        Button:
            text: 'INVENTARIO'
            size_hint: (.25, .2)
            pos_hint: {'x':.374, 'y':.2}
            background_color: 65/255, 105/255, 1,0.9
            on_release: root.manager.current = 'inventario'
        Button:
            text: 'SALIR'
            size_hint: (.25, .2)
            pos_hint: {'x':.374, 'y':.2}
            background_color: 0.7, 0, 0.1, 0.9

<BoletaScreen>:
